<Page
    x:Class="CustomPropertyProviderApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CustomPropertyProviderApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel>
        <Border BorderBrush="{StaticResource SystemControlTransientBorderBrush}" BorderThickness="2" Margin="10">
            <StackPanel>
                <TextBlock Text="This area is to show ViewModel information." />
                <TextBlock Text="{Binding Guid, Mode=OneWay}" />
                <Button Content="Update Guid (This button invokes UpdateGuidCommand, and then Guid property is updated.)" Command="{Binding UpdateGuidCommand}" />
            </StackPanel>
        </Border>
        
        <Button Click="Button_Click" Content="Create a new CustomPropertyProvider ViewModel (Replace DataContext property to a new instance of CustomPropertyProviderMainPageViewModel class.)" />
        <Button Click="Button_Click2" Content="Create a new ViewModel (Replace DataContext property to a new instance of MainPageViewModel class.)" />
    </StackPanel>
</Page>
